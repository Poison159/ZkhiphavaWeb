@model IEnumerable<ZkhiphavaWeb.Models.OperatingHours>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.day)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.openingHour)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.closingHour)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.OrderBy(x => x.indawoId)) {
    <tr>
        <td>
            @ViewBag.indawoNames[item.indawoId]
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.day)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.openingHour)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.closingHour)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>

